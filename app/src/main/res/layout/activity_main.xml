<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Masukkan Dua Angka" />

    <EditText
        android:id="@+id/editangka1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:hint="Masukkan Angka Pertama"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editangka2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editangka1"
        android:hint="Masukkan Angka Kedua"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btntambah"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editangka2"
        android:layout_marginTop="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#0000FF"
        android:text="+" />

    <Button
        android:id="@+id/btnkurang"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btntambah"
        android:layout_alignBottom="@id/btntambah"
        android:layout_toRightOf="@id/btntambah"
        android:layout_toEndOf="@id/btntambah"
        android:backgroundTint="#FFDF00"
        android:textColor="@color/black"
        android:text="-" />

    <Button
        android:id="@+id/BERSIHKAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btntambah"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#00ff00"
        android:text="BERSIHKAN" />

    <Button
        android:id="@+id/btnbagi"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/BERSIHKAN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#A020F0"
        android:text="/" />

    <Button
        android:id="@+id/btnkali"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnbagi"
        android:layout_alignBottom="@id/btnbagi"
        android:layout_toLeftOf="@id/btnbagi"
        android:layout_toStartOf="@id/btnbagi"
        android:backgroundTint="#D22B2B"
        android:text="X" />

    <TextView
        android:id="@+id/TXTHASIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/BERSIHKAN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="HASIL" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TXTHASIL"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textAlignment="center"
        android:text="0" />


</RelativeLayout>